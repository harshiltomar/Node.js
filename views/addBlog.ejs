<!DOCTYPE html>
<html lang="en">
  <head>
    <%= include('./partials/head') %>
    <title>Add New Blog</title>
  </head>
  <body>
    <%= include('./partials/nav') %>
    <div class="container mt-4">
      <form action="/blog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="coverImage" class="form-lable">Cover Image</label>
          <input
            type="file"
            class="form-control"
            id="coverImage"
            name="coverImage"
            aria-describedby="emailHelp"
            placeholder="Upload Cover Image for Blog Post"
          />
        </div>
        <div class="mb-3">
          <label for="title" class="form-lable">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            aria-describedby="emailHelp"
            placeholder="Enter Title"
          />
        </div>
        <div class="mb-3">
          <label for="body">Body</label>
          <textarea
            name="body"
            class="form-control"
            placeholder="Enter your blog content here ..."
            id="body"
          ></textarea>
        </div>
        <div class="mb-3">
          <button class="btn btn-primary">Submit Blog</button>
        </div>
      </form>
    </div>
    <%= include('./partials/scripts') %>
  </body>
</html>
